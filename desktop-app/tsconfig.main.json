{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "composite": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules"]
}
